    <TableLayout
        android:orientation="vertical"
        android:id="@+id/tableColumns"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TableLayout>

    <!-- TODO: Update blank fragment layout -->
